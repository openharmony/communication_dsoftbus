import("//build/config/features.gni")
import("//build/ohos.gni")
import("//build/test.gni")
import("../../../../../../dsoftbus.gni")

##############################fuzztest##########################################

ohos_fuzztest("SoftBusHiSysEvtFuzzTest") {
  module_out_path = dsoftbus_fuzz_out_path
  fuzz_config_file =
      "$dsoftbus_test_dfx_path/event/legacy/fuzztest/softbushisysevt_fuzzer"

  include_dirs = [
    "$dsoftbus_root_path/core/common/include",
    "$dsoftbus_dfx_path/interface/include",
    "$dsoftbus_root_path/tests/common/include",
  ]

  sources = [ "softbushisysevt_fuzzer.cpp" ]

  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
    "-fstack-protector-strong",
  ]

  deps = [ "$dsoftbus_root_path/core/common:softbus_utils" ]

  external_deps = [
    "c_utils:utils",
    "hilog:libhilog",
  ]
}

###############################################################################
group("fuzztest") {
  testonly = true
  deps = [
    # deps file
    ":SoftBusHiSysEvtFuzzTest",
  ]
}
