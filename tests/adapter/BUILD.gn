import("//build/test.gni")
import("../../dsoftbus.gni")

group("unittest") {
  testonly = true
  deps = [
    "bluetooth:unittest",
    "broadcast:unittest",
    "common:unittest",
    "unittest:unittest",
  ]
  if (dsoftbus_feature_ex_kits) {
    deps += [ "$dsoftbus_root_path/dsoftbus_enhance/test/adapter:unittest" ]
  }
}

group("fuzztest") {
  testonly = true
  deps = [ "fuzztest:fuzztest" ]
}
