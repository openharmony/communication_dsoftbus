import("../../../../dsoftbus.gni")

dsoftbus_root_path = "../../../.."

if (defined(ohos_lite)) {
  import("//build/lite/config/component/lite_component.gni")
  import("//build/lite/config/test.gni")

  if (ohos_build_type == "debug") {
    unittest("CommonCoreBitMapTest") {
      output_extension = "bin"
      output_dir = "$root_out_dir/test/unittest/dsoftbus"
      sources = [ "bitmap_test.cpp" ]
      include_dirs = [
        "$dsoftbus_root_path/core/common/include",
        "$dsoftbus_root_path/interfaces/kits/common",
      ]
      deps = [ "$dsoftbus_root_path/core/common:softbus_utils" ]
      deps += [ "$hilog_lite_deps_path" ]
    }
  }
} else {
  import("//build/test.gni")

  module_output_path = "dsoftbus/common"
  ohos_unittest("CommonCoreBitMapTest") {
    module_out_path = module_output_path
    sources = [ "bitmap_test.cpp" ]
    include_dirs = [
      "$dsoftbus_root_path/core/common/include",
      "$dsoftbus_root_path/interfaces/kits/common",
    ]
    deps = [ "$dsoftbus_root_path/core/common:softbus_utils" ]
    if (is_standard_system) {
      external_deps = [ "hilog:libhilog" ]
    } else {
      external_deps = [ "hilog:libhilog" ]
    }
  }
  group("unittest") {
    testonly = true
    deps = [ ":CommonCoreBitMapTest" ]
  }
}
