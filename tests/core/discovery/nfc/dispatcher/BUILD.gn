import("//build/lite/config/component/lite_component.gni")
import("//build/ohos.gni")
import("//build/test.gni")
import("../../../../../dsoftbus.gni")

module_output_path = "dsoftbus/soft_bus/discovery"

ohos_unittest("DiscNfcDispatcherTest") {
  module_out_path = module_output_path
  sources = [ "disc_nfc_dispatcher_test.cpp" ]

  include_dirs = [
    "$dsoftbus_root_path/core/common/include",
    "$dsoftbus_root_path/adapter/common/include",
    "$dsoftbus_root_path/core/discovery/ble/dispatcher/include",
    "$dsoftbus_root_path/core/discovery/usb/dispatcher/include",
    "$dsoftbus_root_path/core/discovery/nfc/dispatcher/include",
    "$dsoftbus_root_path/core/discovery/nfc/dispatcher/src",
    "$dsoftbus_root_path/interfaces/kits/disc",
    "$dsoftbus_root_path/core/discovery/manager/include",
    "$dsoftbus_root_path/interfaces/kits/disc",
    "$dsoftbus_root_path/core/discovery/interface",
    "$softbus_adapter_common/net/bluetooth/broadcast/interface",
    "$dsoftbus_root_path/core/frame/init/include"
  ]

  deps = [
    "$dsoftbus_dfx_path:softbus_dfx",
    "$dsoftbus_root_path/adapter:softbus_adapter",
    "$dsoftbus_root_path/components/nstackx/nstackx_ctrl:nstackx_ctrl",
    "$dsoftbus_root_path/core/common:softbus_utils",
    "$dsoftbus_root_path/core/frame:softbus_server",
  ]

  external_deps = [
    "c_utils:utils",
    "googletest:gtest_main",
    "hilog:libhilog",
  ]
}

group("unittest") {
  testonly = true
  deps = [ ":DiscNfcDispatcherTest" ]
}