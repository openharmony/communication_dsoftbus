    "//third_party/googletest:gtest_main",
  ]

  external_deps = [
    "c_utils:utils",
    "hilog:libhilog",
  ]
  sources = [
    "connection_br_connection_test.cpp",
    "connection_br_mock.cpp",
  ]
}

